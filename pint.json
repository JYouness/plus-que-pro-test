{
    "preset": "psr12",
    "rules": {
        "align_multiline_comment": true,
        "declare_strict_types": true,
        "declare_parentheses": true,
        "no_superfluous_phpdoc_tags": false,
        "phpdoc_add_missing_param_annotation": {
            "only_untyped": false
        },
        "phpdoc_align":{
            "align": "vertical",
            "spacing": 1
        },
        "phpdoc_separation": true
    }
}
